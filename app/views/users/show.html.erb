<body class="users_page">
<div class="user_info">
<h3 class="user_info_header"> Pirate Info </h3>
Captain <%= @user.lname %>
<br>
Bio: <%= @user.bio %>
<br>
Status: <%= @user.adjective %>
<br>
<br>
</div>

<div class="sign_out">
<%= link_to("Sign Out", '/logout', method: :delete) %>
</div>
<br>
<br>

<div class="edit_account">
<h3 class="edit_account_header"> Edit Your Account </h3>
<%= form_for @user do |f| %>
<%= f.label :Captain %>
<%= f.text_field :lname %>
<br>
<%= f.label :password %>
<%= f.password_field :password %>
<br>
<%= f.label :adjective %>
<%= f.select :adjective, ['Scallywag', 'Buccaneer', 'Old Salt', 'SeaDog', 'Landlubber']%>
<br>
<%= f.label :bio %>
<%= f.text_field :bio %>
<br>
<%= f.submit :create %>
<% end %>
</div>
</body>


